@model IEnumerable<PizzaBox.Models.UserRecordsModel>

@{
    ViewData["Title"] = "UserRecords";
}

<h1>User Records</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Crust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationAdd)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                $@Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationAdd)
            </td>
        </tr>
}
    </tbody>
</table>

<input type="button" onclick="location.href = '@Url.Action("Options", "Options")' " value="Return to Options" />
